{
  "rules": {
    "title": {
      "required": true,
      "minLength": 5,
      "maxLength": 100,
      "pattern": "^[A-Z].*[^.]$",
      "description": "Title should start with capital letter and not end with period"
    },
    "description": {
      "required": true,
      "minLength": 20,
      "maxLength": 300,
      "description": "Description should be between 20-300 characters"
    },
    "dates": {
      "startBeforeEnd": true,
      "futureWarning": true,
      "description": "Start date must be before end date"
    },
    "stats": {
      "required": ["kilometers", "activities", "peopleMet", "cities", "days"],
      "positiveNumbers": true,
      "description": "All stats must be positive numbers"
    },
    "images": {
      "absolutePaths": true,
      "requiredFormats": [".jpg", ".jpeg", ".png", ".webp"],
      "description": "Images should use absolute paths and supported formats"
    },
    "coordinates": {
      "validRange": true,
      "minWaypoints": 1,
      "minCoordinates": 2,
      "description": "Coordinates must be within valid lat/lng ranges"
    },
    "content": {
      "minLength": 100,
      "requireHeading": true,
      "description": "Markdown content should have main heading and be substantial"
    }
  },
  "warnings": {
    "statusDateMismatch": true,
    "calculatedDaysMismatch": true,
    "shortContent": true,
    "missingOptionalFields": false
  },
  "ignore": [
    "*.draft.md",
    "*.template.md"
  ]
}